<% if (chat) { %>
<div class="mt-auto">
  <ul
    id="messages"
    class="list-unstyled">
    <% for(var i=0; i<messages.length; i++) {%>
      <span><%=messages[i].userName%></span>
      <span><%=messages[i].createdAt%></span>
      <li>
        <%=messages[i].content%>
      </li>
    <% } %>
  </ul>
</div>

<form id="form" class="mb-2" action="/messages/send" enctype="multipart/form-data" method="POST" data-chat-id="<%= chat._id %>" data-sender-id="<%= user._id %>">
  <div class="input-group">
    <input id="input" autocomplete="off" type="text" name="content" class="form-control" placeholder="Type your message here..." />
    <input type="file" name="file" id="fileInput" class="form-control">
    <button type="submit" class="btn btn-primary"> Send
    </button>
  </div>
</form>
<% } else { %>
  <p>Please select a chat.</p>

<% } %>
