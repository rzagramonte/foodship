<% if (chat) { %>
<div class="mt-auto chatbox" id="chatbox">
  <ul id="messages" class="messages list-unstyled">
    <% for(let i=0; i<chat.messages.length; i++) {%>
      <span><%= message[i].senderId.userName %> <%= new Date(chat.messages[i].createdAt).toLocaleString(undefined, { year: 'numeric', month: 'numeric', day: 'numeric', hour: 'numeric', minute: 'numeric' }) %>
      </span>
      <li>

        <% if (chat.messages[i].content) { %>
          <%= chat.messages[i].content %>
        <% } else  { %>
          <img class = "message-image" src="<%= chat.messages[i].image %>" alt="User uploaded image">
        <% } %>
        
      </li>
    <% } %>
  </ul>
</div>

<form
  id="form"
  class="mb-2"
  action="/messages/send"
  enctype="multipart/form-data"
  method="POST"
  data-chat-id="<%= chat._id %>"
  data-sender-id="<%= user._id %>">
  <div class="input-group">
    <input
      id="input"
      autocomplete="off"
      type="text"
      name="content"
      class="form-control"
      placeholder="Type your message here..." />
    <input type="file" name="file" id="fileInput" class="form-control" />
    <button type="submit" class="btn btn-primary">Send</button>
  </div>
</form>
<% } else { %>
<p>Please select a chat.</p>

<% } %>
